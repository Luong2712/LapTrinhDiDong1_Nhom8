<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainTrangChuAdmin">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Trang chủ Admin"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSanPham"
        android:layout_width="164dp"
        android:layout_height="155dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/list_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="154dp"
        android:layout_height="42dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Sản phẩm"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSanPham" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="193dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Loại Sản phẩm"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLoaiSanPham" />

    <ImageView
        android:id="@+id/imgTaiKhoan"
        android:layout_width="154dp"
        android:layout_height="152dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/user_icon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Tài khoản"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTaiKhoan" />

    <ImageView
        android:id="@+id/imgBaoCao"
        android:layout_width="165dp"
        android:layout_height="154dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/imgTaiKhoan"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/bieudo_icon" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="192dp"
        android:layout_height="64dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Báo cáo, thống kê"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/imgBaoCao" />

    <ImageView
        android:id="@+id/imgLoaiSanPham"
        android:layout_width="179dp"
        android:layout_height="156dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@+id/imgSanPham"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/list_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>